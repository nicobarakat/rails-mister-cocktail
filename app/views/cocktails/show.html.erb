<h2><%= @cocktail.name %></h2>
<h3> Ingredients </h3>

<p> <%= link_to "Delete cocktail", cocktail_path(@cocktail),
  method: :delete, data: { confirm: "Are you sure?" } %> </p>

<% @cocktail.doses.each do |dose| %>
  <p> <%= dose.description %> </p>
  <p> <%= dose.ingredient.name %> </p>
  <p> <%= link_to "Delete ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %> </p>
<% end %>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Go back', cocktails_path %>
